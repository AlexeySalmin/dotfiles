[alias]
	st = status -s -b --untracked=no
	ci = commit -v
	co = checkout
	sw = switch
	b = branch
	d = diff
	last = log -p -n 1
	changes = log -p -M --follow --stat --
	logs = log --name-status
	staged = diff --staged
	unstage = reset --
	track = add -N
	addup = add -u
	a = add -u
	need2push = log --branches --not --remotes
[push]
	default = simple
[pull]
	rebase = true
[diff]
	colorMoved = zebra
	colorMovedWS = ignore-space-change
[rebase]
	autoStash = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pager]
	status = true
